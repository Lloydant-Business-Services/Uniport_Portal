    .card {
        padding: 30px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        margin: 30px 0;
        border: 1px solid #f2f2f2;
    }

    .text-uppercase {
        font-weight: bold;
        margin-right: 15px;
    }

    .form-group {
        margin-bottom: 0px !important;
    }

    .ts-sidebar a {
        font-size: 12px;
        font-family: 'Quicksand', sans-serif;
    }

    .sofia {
        font-family: 'Quicksand', sans-serif !important;
    }

    p, a, li, span, input, b {
        font-family: 'Quicksand', sans-serif !important;
    }

    table tr td {
        font-family: 'Quicksand', sans-serif !important;
    }

    div {
        font-family: 'Quicksand', sans-serif !important;
    }
